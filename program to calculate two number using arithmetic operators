#include <stdio.h>

int main() {
    int num1, num2;
    char operator;
    float result; 

    
    printf("Enter first number: ");
    scanf("%d", &num1);
    printf("Enter an operator (+, -, *, /, %%): ");
    scanf(" %c", &operator); 
    printf("Enter second number: ");
    scanf("%d", &num2);

    
    if (operator == '+') {
        result = num1 + num2;
        printf("Result: %d + %d = %.2f\n", num1, num2, result);
    } else if (operator == '-') {
        result = num1 - num2;
        printf("Result: %d - %d = %.2f\n", num1, num2, result);
    } else if (operator == '*') {
        result = num1 * num2;
        printf("Result: %d * %d = %.2f\n", num1, num2, result);
    } else if (operator == '/') {
        if (num2 != 0) {
            result = (float)num1 / num2; 
            printf("Result: %d / %d = %.2f\n", num1, num2, result);
        } else {
            printf("Error: Division by zero is not allowed.\n");
        }
    } else if (operator == '%') {
        if (num2 != 0) {
            result = num1 % num2;
            printf("Result: %d %% %d = %.2f\n", num1, num2, result);
        } else {
            printf("Error: Modulo by zero is not allowed.\n");
        }
    } else {
        printf("Error: Invalid operator entered.\n");
    }

    return 0;
}

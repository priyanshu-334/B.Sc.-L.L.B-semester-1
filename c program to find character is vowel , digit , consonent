#include<stdio.h>
int main (){
    char ch;
    printf("Enter a character :");
    scanf(" %c", &ch);
    switch (ch){
        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
        printf("%c is a vowel.\n", ch);
        break;
        default:
        if (ch>= '0' && ch<= '9'){
            printf("%c is a digit.\n", ch);
        } else if (ch >= 'a' && ch <= 'z'){
            printf("%c is a consoment.\n", ch);
        } else {
            printf("%c is neither a vowel , digit , nor consonent.\n", ch);
        }
        break;
    }
    return 0;
}

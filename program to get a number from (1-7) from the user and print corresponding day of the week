#include<stdio.h>
int main(){
    int Day;
    printf("Enter a number (1-7): ");
    scanf("%d", &Day);
    switch(Day){
        case 1:
        printf("Monday\n");
        break;
        case 2:
        printf("Tuesday\n");
        break;
        case 3:
        printf("wednesday\n");
        break;
        case 4:
        printf("Thursday\n");
        break;
        case 5:
        printf("Friday\n");
        break;
        case 6:
        printf("Saturday\n");
        break;
        case 7:
        printf("Sunday\n");
        break;
        default:
        printf(" ERROR INVALID INPUT! PLEASE ENTER A NUMBER BETWEEN 1 TO 7.\n");
        break;
    }
}

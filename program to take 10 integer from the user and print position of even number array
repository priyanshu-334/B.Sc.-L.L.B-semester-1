#include <stdio.h>

int main() {
    int a[10], i;

    printf("Enter 10 numbers:\n");

    for(i = 0; i < 10; i++) {
        scanf("%d", &a[i]);
    }

    printf("Positions of even numbers are:\n");

    for(i = 0; i < 10; i++) {
        if(a[i] % 2 == 0) {
            printf("%d ", i + 1);
        }
    }

    return 0;
}
